<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:layout_gravity="center_vertical"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/actionbar_color">

        <ImageView
            android:layout_width="?android:attr/actionBarSize"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/iv_create_note_camera"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button_camera" />
        <ImageView
            android:id="@+id/iv_create_note_color"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button_color" />
        <ImageView
            android:id="@+id/iv_create_note_save"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button_save" />
    </LinearLayout>

</LinearLayout>