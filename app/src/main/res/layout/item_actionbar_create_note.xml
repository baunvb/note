<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:layout_gravity="center_vertical"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/actionbar_color">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:background="@drawable/bg_button_back"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_back"
                android:scaleType="fitCenter"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>

        <TextView
            android:id="@+id/title_item_note"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:lines="1"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_create_note_camera"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button_camera" />
        <ImageView
            android:id="@+id/iv_create_note_color"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button_color" />
        <ImageView
            android:id="@+id/iv_create_note_save"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button_save" />
        <ImageView
            android:id="@+id/iv_create_note_more"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button_more"
            android:onClick="showPopup"/>
    </LinearLayout>

</LinearLayout>